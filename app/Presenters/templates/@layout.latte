<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
    <link rel="shortcun icon" href="{$basePath}/dist/images/favicon.png" type="image/png">
    <link rel="stylesheet" href="{$basePath}/dist/web.bundle.css">
    <title>Nette Web</title>
</head>
<body data-bs-spy="scroll" data-bs-target="#showcase" data-bs-offset="150">
    <main>
        <nav class="navbar navbar-expand-md navbar-style">
            <div class="container">
                <a n:href="Homepage:" class="navbar-brand text-white">
                    <img src="{$basePath}/dist/images/logo_transparent.png">
                </a>
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                   <svg>
                        <use xlink:href="{$basePath}/dist/images/sprite.svg#icon-menu">
                   </svg>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto text-end me-3 mt-3">
                        <li class="nav-item" n:foreach="$navItems as $navItem">
                            <a n:href="Homepage:detail $navItem->id" class="nav-link">{$navItem->title}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
        {include content}
        <footer>
            <div class="container py-3">
                <div class="row">
                    <div class="col-sm-4 text-center my-auto">
                        <div class="copy">
                          Copyright&copy;&nbsp;2022
                       </div>
                    </div>
                    <div class="col-sm-4 d-flex justify-content-center align-items-center">
                         <div class="media d-flex my-4 my-sm-0">
                              <a href="#">
                                <div class="circle">
                                    <svg>
                                        <use xlink:href="{$basePath}/dist/images/sprite.svg#icon-facebook">
                                    </svg>
                                </div>
                            </a>      
                            <a href="#">
                                <div class="circle mx-3">
                                    <svg>
                                        <use xlink:href="{$basePath}/dist/images/sprite.svg#icon-twitter">
                                    </svg>
                                 </div>
                            </a>
                            <a href="#">
                                 <div class="circle">
                                    <svg>
                                        <use xlink:href="{$basePath}/dist/images/sprite.svg#icon-instagram">
                                    </svg>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-sm-4 text-center my-auto">
                        <div class="terms">
                            <a href="#">Zásady ochrany osobních údajů</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </main>
{block scripts}
    <script src="{$basePath}/dist/web.bundle.js"></script>
</body>
</html>
